<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OnboardingFragment2">

    <TextView
        android:id="@+id/msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="61dp"
        android:text="장애 유형을 선택해주세요"
        android:textSize="21sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/msg2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="복수 선택 가능"
        android:textAlignment="center"
        android:textColor="#61646D"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/msg" />

    <LinearLayout
        android:id="@+id/chipGroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="24dp"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        app:layout_constraintBottom_toTopOf="@+id/ob_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/msg2"
        app:layout_constraintVertical_bias="0.0">

        <!-- 1행 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip1"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_marginEnd="12dp"
                android:layout_weight="1"
                android:checkable="true"
                android:text="지체장애"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold"
                app:chipCornerRadius="20dp"
                app:chipStrokeWidth="3dp"
                app:chipSurfaceColor="#F4EEEE" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip2"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_marginEnd="12dp"
                android:layout_weight="1"
                android:checkable="true"
                android:text="언어장애"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold"
                app:chipCornerRadius="20dp"
                app:chipStrokeWidth="3dp"
                app:chipSurfaceColor="#F4EEEE" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip3"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:checkable="true"
                android:text="시각장애"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold"
                app:chipCornerRadius="20dp"
                app:chipStrokeWidth="3dp"
                app:chipSurfaceColor="#F4EEEE" />
        </LinearLayout>

        <!-- 2행 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip4"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_marginEnd="12dp"
                android:layout_weight="1"
                android:checkable="true"
                android:text="청각장애"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold"
                app:chipCornerRadius="20dp"
                app:chipStrokeWidth="3dp"
                app:chipSurfaceColor="#F4EEEE" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip5"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_marginEnd="12dp"
                android:layout_weight="1"
                android:checkable="true"
                android:text="정신장애"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold"
                app:chipCornerRadius="20dp"
                app:chipStrokeWidth="3dp"
                app:chipSurfaceColor="#F4EEEE" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip6"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:checkable="true"
                android:text="지적장애"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold"
                app:chipCornerRadius="20dp"
                app:chipStrokeWidth="3dp"
                app:chipSurfaceColor="#F4EEEE" />
        </LinearLayout>

        <!-- 3행 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip7"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_marginEnd="12dp"
                android:layout_weight="1"
                android:checkable="true"
                android:text="호흡기장애"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold"
                app:chipCornerRadius="20dp"
                app:chipStrokeWidth="3dp"
                app:chipSurfaceColor="#F4EEEE" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip8"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_marginEnd="12dp"
                android:layout_weight="1"
                android:checkable="true"
                android:text="심장장애"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold"
                app:chipCornerRadius="20dp"
                app:chipStrokeWidth="3dp"
                app:chipSurfaceColor="#F4EEEE" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip9"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:checkable="true"
                android:text="안면장애"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold"
                app:chipCornerRadius="20dp"
                app:chipStrokeWidth="3dp"
                app:chipSurfaceColor="#F4EEEE" />
        </LinearLayout>

        <!-- 4행 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip10"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_marginEnd="12dp"
                android:layout_weight="1"
                android:checkable="true"
                android:text="간장애"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold"
                app:chipCornerRadius="20dp"
                app:chipStrokeWidth="3dp"
                app:chipSurfaceColor="#F4EEEE" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip11"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_marginEnd="12dp"
                android:layout_weight="1"
                android:checkable="true"
                android:text="신장장애"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold"
                app:chipCornerRadius="20dp"
                app:chipStrokeWidth="3dp"
                app:chipSurfaceColor="#F4EEEE" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip12"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:checkable="true"
                android:text="자폐성장애"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textStyle="bold"
                app:chipCornerRadius="20dp"
                app:chipStrokeWidth="3dp"
                app:chipSurfaceColor="#F4EEEE" />
        </LinearLayout>

    </LinearLayout>

    <android.widget.Button
        android:id="@+id/ob_button"
        style="@style/ButtonStyleColor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:text="계속하기"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
